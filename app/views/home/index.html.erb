<div class="dashboard-container">
  <h1 class="dashboard-title">Solar System Dashboard</h1>
  
  <!-- Last Updated Section -->
  <div class="last-updated">
    <h2 class="last-updated-header section-header">Last Updated</h2>
    <% if @last_updated %>
      <p class="text-gray-700">
        System data was last updated on <%= @last_updated.strftime("%B %d, %Y at %I:%M %p") %>
      </p>
    <% else %>
      <p class="text-gray-500">No system data available</p>
    <% end %>
  </div>

  <!-- Current Status -->
  <% if @latest_status %>
    <div class="section-card">
      <h2 class="section-header">Current Status</h2>
      <div class="status-grid">
        <div class="status-item <%= @latest_status.power_on? ? 'power-on' : 'power-off' %>">
          <h3 class="status-label <%= @latest_status.power_on? ? 'power-on-label' : 'power-off-label' %>">Power Status</h3>
          <p class="status-value <%= @latest_status.power_on? ? 'power-on-value' : 'power-off-value' %>">
            <%= @latest_status.power_on? ? 'ON' : 'OFF' %>
          </p>
        </div>
        
        <div class="status-item battery-item">
          <h3 class="status-label battery-label">Battery Level</h3>
          <p class="text-2xl font-bold text-yellow-600"><%= @latest_status.battery_level&.round(1) %>%</p>
        </div>
        
        <div class="status-item production-item">
          <h3 class="status-label production-label">Production</h3>
          <p class="status-value production-value"><%= (@latest_status.production / 1000.0).round(2) %> kW</p>
        </div>
        
        <div class="status-item consumption-item">
          <h3 class="status-label consumption-label">Consumption</h3>
          <p class="status-value consumption-value"><%= (@latest_status.consumption / 1000.0).round(2) %> kW</p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Power Outages History -->
  <div class="outages-section">
    <h2 class="outages-header section-header">Power Outages History</h2>
    
    <% if @outages.any? %>
      <div class="overflow-x-auto">
        <table class="outages-table">
          <thead>
            <tr class="table-header">
              <th class="table-th">Start Time</th>
              <th class="table-th">End Time</th>
              <th class="table-th">Duration</th>
              <th class="table-th">Status</th>
            </tr>
          </thead>
          <tbody>
            <% @outages.reverse.each do |outage| %>
              <tr class="table-row">
                <td class="table-td"><%= outage[:start_time].strftime("%b %d, %Y %I:%M %p") %></td>
                <td class="px-4 py-2">
                  <% if outage[:ongoing] %>
                    <span class="text-red-600 font-medium">Ongoing</span>
                  <% else %>
                    <%= outage[:end_time].strftime("%b %d, %Y %I:%M %p") %>
                  <% end %>
                </td>
                <td class="table-td font-medium"><%= outage[:duration] %></td>
                <td class="px-4 py-2">
                  <% if outage[:ongoing] %>
                    <span class="badge active-outage">Active Outage</span>
                  <% else %>
                    <span class="badge resolved">Resolved</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Summary Stats -->
      <div class="summary-stats">
        <h3 class="summary-header">Summary</h3>
<p class="summary-text">
          Total outages recorded: <span class="summary-count"><%= @outages.count %></span>
        </p>
      </div>
    <% else %>
      <div class="no-outages">
        <p class="no-outages-text">No power outages recorded</p>
        <p class="smooth-text">System has been running smoothly!</p>
      </div>
    <% end %>
  </div>
</div>