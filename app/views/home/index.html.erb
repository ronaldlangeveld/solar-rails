<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Solar System Dashboard</h1>
  
  <!-- Last Updated Section -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-6">
    <h2 class="text-xl font-semibold mb-2">Last Updated</h2>
    <% if @last_updated %>
      <p class="text-gray-700">
        System data was last updated on <%= @last_updated.strftime("%B %d, %Y at %I:%M %p") %>
      </p>
    <% else %>
      <p class="text-gray-500">No system data available</p>
    <% end %>
  </div>

  <!-- Current Status -->
  <% if @latest_status %>
    <div class="bg-white border border-gray-200 rounded-lg p-6 mb-6">
      <h2 class="text-xl font-semibold mb-4">Current Status</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-<%= @latest_status.power_on? ? 'green' : 'red' %>-50 p-4 rounded-lg">
          <h3 class="font-medium text-<%= @latest_status.power_on? ? 'green' : 'red' %>-800">Power Status</h3>
          <p class="text-2xl font-bold text-<%= @latest_status.power_on? ? 'green' : 'red' %>-600">
            <%= @latest_status.power_on? ? 'ON' : 'OFF' %>
          </p>
        </div>
        
        <div class="bg-yellow-50 p-4 rounded-lg">
          <h3 class="font-medium text-yellow-800">Battery Level</h3>
          <p class="text-2xl font-bold text-yellow-600"><%= @latest_status.battery_level&.round(1) %>%</p>
        </div>
        
        <div class="bg-green-50 p-4 rounded-lg">
          <h3 class="font-medium text-green-800">Production</h3>
          <p class="text-2xl font-bold text-green-600"><%= @latest_status.production&.round(2) %> kW</p>
        </div>
        
        <div class="bg-blue-50 p-4 rounded-lg">
          <h3 class="font-medium text-blue-800">Consumption</h3>
          <p class="text-2xl font-bold text-blue-600"><%= @latest_status.consumption&.round(2) %> kW</p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Power Outages History -->
  <div class="bg-white border border-gray-200 rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">Power Outages History</h2>
    
    <% if @outages.any? %>
      <div class="overflow-x-auto">
        <table class="w-full table-auto">
          <thead>
            <tr class="bg-gray-50">
              <th class="px-4 py-2 text-left">Start Time</th>
              <th class="px-4 py-2 text-left">End Time</th>
              <th class="px-4 py-2 text-left">Duration</th>
              <th class="px-4 py-2 text-left">Status</th>
            </tr>
          </thead>
          <tbody>
            <% @outages.reverse.each do |outage| %>
              <tr class="border-b border-gray-100">
                <td class="px-4 py-2"><%= outage[:start_time].strftime("%b %d, %Y %I:%M %p") %></td>
                <td class="px-4 py-2">
                  <% if outage[:ongoing] %>
                    <span class="text-red-600 font-medium">Ongoing</span>
                  <% else %>
                    <%= outage[:end_time].strftime("%b %d, %Y %I:%M %p") %>
                  <% end %>
                </td>
                <td class="px-4 py-2 font-medium"><%= outage[:duration] %></td>
                <td class="px-4 py-2">
                  <% if outage[:ongoing] %>
                    <span class="bg-red-100 text-red-800 px-2 py-1 rounded-full text-sm">Active Outage</span>
                  <% else %>
                    <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded-full text-sm">Resolved</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Summary Stats -->
      <div class="mt-6 p-4 bg-gray-50 rounded-lg">
        <h3 class="font-semibold mb-2">Summary</h3>
        <p class="text-gray-700">
          Total outages recorded: <span class="font-medium"><%= @outages.count %></span>
        </p>
      </div>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500 text-lg">No power outages recorded</p>
        <p class="text-gray-400 text-sm mt-2">System has been running smoothly!</p>
      </div>
    <% end %>
  </div>
</div>